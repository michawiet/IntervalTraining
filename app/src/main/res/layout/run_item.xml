<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/training_notification_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_view_constraint_layout_run_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/ivRunItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/dividerImageView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="-8dp"
                app:layout_constraintBottom_toBottomOf="@id/ivRunItem"
                android:background="?android:attr/listDivider"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/progressLeftVerticalGuideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <TextView
                android:id="@+id/tvLength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="--:--"
                android:textColor="@color/black_active"
                android:textSize="20sp"
                android:textStyle="normal"
                android:typeface="monospace"
                app:layout_constraintStart_toStartOf="@id/card_view_constraint_layout_run_item"
                app:layout_constraintEnd_toEndOf="@id/progressLeftVerticalGuideline"
                app:layout_constraintTop_toTopOf="@id/dividerImageView" />

            <TextView
                android:id="@+id/tvLengthTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Moving time"
                android:textColor="@color/black_inactive"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/tvLength"
                app:layout_constraintEnd_toEndOf="@id/tvLength"
                app:layout_constraintTop_toBottomOf="@id/tvLength" />

            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black_active"
                android:textSize="20sp"
                android:textStyle="normal"
                android:typeface="monospace"
                app:layout_constraintEnd_toEndOf="@id/card_view_constraint_layout_run_item"
                app:layout_constraintStart_toStartOf="@id/progressLeftVerticalGuideline"
                app:layout_constraintTop_toTopOf="@id/dividerImageView" />

            <TextView
                android:id="@+id/tvDistanceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="km"
                android:textColor="@color/black_inactive"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/tvDistance"
                app:layout_constraintEnd_toEndOf="@id/tvDistance"
                app:layout_constraintTop_toBottomOf="@id/tvDistance" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="-8dp"
                app:layout_constraintBottom_toBottomOf="@id/tvDistanceTitle"
                android:background="?android:attr/listDivider"/>

            <TextView
                android:id="@+id/tvAvgSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="--:--"
                android:textColor="@color/black_active"
                android:textSize="20sp"
                android:textStyle="normal"
                android:typeface="monospace"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@id/card_view_constraint_layout_run_item"
                app:layout_constraintEnd_toEndOf="@id/progressLeftVerticalGuideline"
                app:layout_constraintTop_toTopOf="@id/divider" />

            <TextView
                android:id="@+id/tvAvgSpeedTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="/km"
                android:textColor="@color/black_inactive"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/tvAvgSpeed"
                app:layout_constraintEnd_toEndOf="@id/tvAvgSpeed"
                app:layout_constraintTop_toBottomOf="@id/tvAvgSpeed" />

            <TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0/100"
                android:textColor="@color/black_active"
                android:textSize="20sp"
                android:textStyle="normal"
                android:typeface="monospace"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@id/card_view_constraint_layout_run_item"
                app:layout_constraintStart_toStartOf="@id/progressLeftVerticalGuideline"
                app:layout_constraintTop_toTopOf="@id/divider" />

            <TextView
                android:id="@+id/tvRatingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Rating"
                android:textColor="@color/black_inactive"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/tvRating"
                app:layout_constraintEnd_toEndOf="@id/tvRating"
                app:layout_constraintTop_toBottomOf="@id/tvRating" />

            <TextView
                android:id="@+id/tvDateRunItem"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:gravity="center_vertical"
                android:text="weekday, 01 monthName 1970, 00:00"
                android:layout_marginTop="4dp"
                android:textColor="@color/black_inactive"
                android:textSize="12sp"
                android:textStyle="normal"
                android:typeface="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvRatingTitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>