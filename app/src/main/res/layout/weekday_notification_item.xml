<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/weekday_alarm_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_round_alarm_off_24"
        android:contentDescription="@string/set_time_of_notification" />

    <TextView
        android:id="@+id/weekday_name_text_view"
        android:layout_width="180dp"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:text="@string/notification_weekday"
        android:textColor="@android:color/primary_text_light"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintStart_toEndOf="@id/weekday_alarm_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/notification_time"
        android:layout_width="100dp"
        android:layout_height="18dp"
        android:gravity="center_vertical"
        android:text="@string/notification_time"
        android:textColor="#757575"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/weekday_name_text_view"
        app:layout_constraintTop_toBottomOf="@id/weekday_name_text_view" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/weekday_notification_switch"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider_weekday_row"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="-8dp"
        app:layout_constraintBottom_toBottomOf="@id/weekday_alarm_icon"
        android:background="?android:attr/listDivider"/>

</androidx.constraintlayout.widget.ConstraintLayout>