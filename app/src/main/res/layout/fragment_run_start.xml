<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/runTimePieChart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/progressHorizontalGuideline"
        tools:layout_editor_absoluteX="16dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/progressHorizontalGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <View
        android:id="@+id/divider_one"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="-4dp"
        app:layout_constraintBottom_toBottomOf="@id/progressHorizontalGuideline"
        android:background="?android:attr/listDivider"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvIntervalLengthTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/interval_duration"
        android:textColor="@color/black_active"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_one" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvWarmupLengthInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/warmup_title"
        android:textColor="#757575"
        android:textSize="14sp"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="@+id/tvWarmupLength"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tvWarmupLength"
        app:layout_constraintTop_toBottomOf="@id/tvWarmupLength" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvWarmupLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/minutes_seconds_default"
        android:textSize="16sp"
        android:textColor="@color/black_inactive"
        android:typeface="monospace"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvIntervalLengthTitle"
        app:layout_constraintEnd_toStartOf="@+id/tvTotalTimeSpentTrackingActivity"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvWalkIntervalLengthInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/walk_interval_length_hint"
        android:textColor="#757575"
        android:textSize="14sp"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="@+id/tvTotalDistanceCovered"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tvTotalDistanceCovered"
        app:layout_constraintTop_toBottomOf="@id/tvTotalDistanceCovered" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTotalDistanceCovered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/minutes_seconds_default"
        android:textSize="16sp"
        android:textColor="@color/black_inactive"
        android:typeface="monospace"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvIntervalLengthTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvTotalTimeSpentTrackingActivity" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvRunIntervalLengthInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/run_interval_length_hint"
        android:textColor="#757575"
        android:textSize="14sp"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="@+id/tvTotalTimeSpentTrackingActivity"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tvTotalTimeSpentTrackingActivity"
        app:layout_constraintTop_toBottomOf="@id/tvTotalTimeSpentTrackingActivity" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTotalTimeSpentTrackingActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/minutes_seconds_default"
        android:textSize="16sp"
        android:textColor="@color/black_inactive"
        android:typeface="monospace"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvIntervalLengthTitle"
        app:layout_constraintEnd_toStartOf="@+id/progressLeftVerticalGuideline"
        app:layout_constraintStart_toStartOf="@+id/progressLeftVerticalGuideline" />

    <View
        android:id="@+id/divider_two"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="-8dp"
        app:layout_constraintBottom_toBottomOf="@id/tvRunIntervalLengthInfo"
        android:background="?android:attr/listDivider"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTotalActiveTimeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/active_time_title"
        android:textColor="@color/black_active"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/progressLeftVerticalGuideline"
        app:layout_constraintTop_toBottomOf="@id/divider_two" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTotalActiveTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/minutes_seconds_default"
        android:textSize="14sp"
        android:textColor="@color/black_inactive"
        android:typeface="monospace"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvTotalActiveTimeTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/progressLeftVerticalGuideline" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvWorkoutStepTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="@string/workout_step"
        android:textColor="@color/black_active"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/progressLeftVerticalGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_two" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvWorkoutStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/workout_step_default"
        android:textSize="14sp"
        android:textColor="@color/black_inactive"
        android:typeface="monospace"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvWorkoutStepTitle"
        app:layout_constraintStart_toStartOf="@id/progressLeftVerticalGuideline"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/progressLeftVerticalGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/runStartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_run_button"
        android:textColor="@color/primary_50"
        android:layout_marginBottom="16dp"
        app:iconTint="@color/primary_50"
        app:icon="@drawable/ic_round_directions_run_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>