<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/activity_progress_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:cpb_background_progressbar_color="@color/primary_50"
        app:cpb_background_progressbar_width="10dp"
        app:cpb_progress="75"
        app:cpb_progressbar_color="@color/primary_500"
        app:cpb_progressbar_width="10dp"
        app:cpb_round_border="true"
         />

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/interval_progress_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.627"
        app:layout_constraintTop_toTopOf="@id/activity_progress_bar"
        app:layout_constraintStart_toStartOf="@id/activity_progress_bar"
        app:layout_constraintBottom_toBottomOf="@id/activity_progress_bar"
        app:layout_constraintEnd_toEndOf="@id/activity_progress_bar"
        app:cpb_progress="25"
        app:cpb_round_border="true"
        app:cpb_background_progressbar_color="@color/primary_100"
        app:cpb_background_progressbar_width="10dp"
        app:cpb_progressbar_color="@color/primary_900"
        app:cpb_progressbar_width="10dp"
        />

    <TextView
        android:id="@+id/interval_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/interval_progress_bar"
        app:layout_constraintStart_toStartOf="@id/interval_progress_bar"
        app:layout_constraintBottom_toBottomOf="@id/interval_progress_bar"
        app:layout_constraintEnd_toEndOf="@id/interval_progress_bar"
        app:layout_constraintWidth_percent="0.5"
        android:text="00:00"
        android:textSize="50sp"
        android:textColor="@android:color/primary_text_light"
        />

    <TextView
        android:id="@+id/activity_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="20sp"
        android:textColor="?textColorSecondary"
        app:layout_constraintBottom_toTopOf="@id/interval_timer"
        app:layout_constraintEnd_toEndOf="@id/interval_progress_bar"
        app:layout_constraintStart_toStartOf="@id/interval_progress_bar"
        app:layout_constraintTop_toTopOf="@id/interval_progress_bar"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintVertical_bias="0.75" />

    <TextView
        android:id="@+id/minute_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="m"
        android:textSize="15sp"
        android:textColor="?textColorSecondary"
        app:layout_constraintEnd_toEndOf="@id/interval_timer"
        app:layout_constraintStart_toStartOf="@id/interval_timer"
        app:layout_constraintTop_toTopOf="@id/interval_timer"
        app:layout_constraintBottom_toBottomOf="@id/interval_progress_bar"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/seconds_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="s"
        android:textColor="?textColorSecondary"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/interval_timer"
        app:layout_constraintStart_toStartOf="@id/interval_timer"
        app:layout_constraintTop_toTopOf="@id/interval_timer"
        app:layout_constraintBottom_toBottomOf="@id/interval_progress_bar"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/activity_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.5"
        android:text="Biegnij!"
        android:textColor="?textColorSecondary"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@id/interval_progress_bar"
        app:layout_constraintEnd_toEndOf="@id/interval_progress_bar"
        app:layout_constraintStart_toStartOf="@id/interval_progress_bar"
        app:layout_constraintTop_toBottomOf="@id/interval_timer"
        app:layout_constraintVertical_bias="0.25" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/activityPlayPause_floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="@color/primary_100"
        app:tint="@color/primary_600"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95"
        app:srcCompat="@drawable/ic_round_pause_24" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/activityStop_floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="@color/light_red"
        app:tint="@color/red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintHorizontal_bias="0.10"
        app:srcCompat="@drawable/ic_round_stop_24" />


</androidx.constraintlayout.widget.ConstraintLayout>